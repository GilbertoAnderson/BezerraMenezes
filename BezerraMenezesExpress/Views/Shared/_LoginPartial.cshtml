@using Microsoft.AspNet.Identity
@using BezerraMenezesExpress.Controllers.Shared;

@if (SessionProfile.Logado)
   {
    <ul class="nav navbar-nav navbar-right">

        <li>@Html.ActionLink((string)Session["Nome"], "Index", "Manage", new { area = "" }, new { @class = "nav-link" })</li>
        <li>@Html.ActionLink("Sair", "LogOff", "Account", new { area = "" }, new { @class = "nav-link" })</li>
    </ul>
}
else
{
<ul class="nav navbar-nav navbar-right">
    <li> @Html.ActionLink("Entrar", "Login", "Account", new { area = "" }, new { @class = "nav-link" }) </li>
</ul>
}

@using BezerraMenezesExpress.Controllers.Shared;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bezerra de Menezes Financeiro</title>
    <!-- Última versão CSS compilada e minificada -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    <script language="JavaScript1.2">
        top.window.moveTo(0, 0);
        if (document.all) {
            alert("oi"); top.window.resizeTo(screen.availWidth, screen.availHeight);
        }
        else if
            (document.layers || document.getElementById) {
            if
                (top.window.outerHeight < screen.availHeight || top.window.outerWidth < screen.availWidth) {
                top.window.outerHeight = top.screen.availHeight;
                top.window.outerWidth = top.screen.availWidth;
            }
        }
    </script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">

        @Html.ActionLink("Bezerra de Menezes |", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">


                @if (SessionProfile.Admin || SessionProfile.Financeiro || SessionProfile.Secretaria)
                {


                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Associado
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">

                            @if (SessionProfile.Admin || SessionProfile.Secretaria)
                            {
                                @Html.ActionLink("Consulta", "Index", "Associados", new { area = "" }, new { @class = "dropdown-item" })

                                @Html.ActionLink("Ultima Parcela", "UltimaParcela", "Relatorios", new { area = "" }, new { @class = "dropdown-item" })

                                @Html.ActionLink("Associado Categoria", "AssociadoCategoria", "Relatorios", new { area = "" }, new { @class = "dropdown-item" })
                            }

                            @Html.ActionLink("Histórico", "Historico", "Associados", new { area = "" }, new { @class = "dropdown-item" })


                         </div>
                    </li>

                }





                @if (SessionProfile.Admin || SessionProfile.Financeiro)
                {

                    <li>@Html.ActionLink("Contribuição", "Create", "Parcelas", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Financeiro
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">

                            @Html.ActionLink("Forma de Pagamento", "Index", "FormasPagamento", new { area = "" }, new { @class = "dropdown-item" })

                            @Html.ActionLink("Contas", "Index", "Contas", new { area = "" }, new { @class = "dropdown-item" })

                            @Html.ActionLink("SubContas", "Index", "SubContas", new { area = "" }, new { @class = "dropdown-item" })

                            @Html.ActionLink("Lançamentos", "ListaContas", "Contas", new { area = "" }, new { @class = "dropdown-item" })

                            @Html.ActionLink("Extrato", "Extrato", "Relatorios", new { area = "" }, new { @class = "dropdown-item" })

                            @Html.ActionLink("Fluxo", "Fluxo", "Relatorios", new { area = "" }, new { @class = "dropdown-item" })

                            @*@Html.ActionLink("Gerencial", "Gerencial", "Relatorios", new { area = "" }, new { @class = "dropdown-item" })*@

                        </div>
                    </li>

                }





                @*--   bloco livraria inicio*@
                @if (SessionProfile.Livraria)
                {
                    <li>@Html.ActionLink("Livros", "Index", "Livros", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Entrada", "Create", "CarrinhosEntrada", new { area = "" }, new { @class = "nav-link" })</li>
                }


                @if (SessionProfile.Admin)
                {

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Livraria
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">

                            @Html.ActionLink("Livros", "Index", "Livros", new { area = "" }, new { @class = "dropdown-item" })

                            @Html.ActionLink("Entrada", "EntradaIndex", "CarrinhosEntrada", new { area = "" }, new { @class = "dropdown-item" })

                            @Html.ActionLink("Venda", "Saida", "CarrinhosEntrada", new { area = "" }, new { @class = "dropdown-item" })

                        </div>
                    </li>

                }


                @if (SessionProfile.Admin)
                {
                    <li>@Html.ActionLink("Usuários", "Index", "Usuarios", new { area = "" }, new { @class = "nav-link" })</li>
                }



                <li>@Html.ActionLink("Sobre", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
            </ul>

            @Html.Partial("_LoginPartial")
        </div>
    </nav>




    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Centro Espirita Bezerra de Menezes </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")

    @RenderSection("scripts", required: false)

</body>
</html>




@section Scripts {

    <script type="text/javascript">


        $(document).ready(function () {
            $('.dropdown-submenu a.test').on("click", function (e) {
                $(this).next('ul').toggle();
                e.stopPropagation();
                e.preventDefault();
            });
        });


    </script>
}
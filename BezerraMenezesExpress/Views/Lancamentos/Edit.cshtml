@model BezerraMenezesExpress.Models.tblLancamento

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Lancamentos</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idLancamento)

        <div class="form-group">
            @Html.LabelFor(model => model.idConta, "Conta", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idConta", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idConta, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.idSubconta, "Subconta", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idSubconta", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idSubconta, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Descricao,  new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Pagamento, "Data" ,htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @* @Html.TextBoxFor(model => model.Pagamento, "{0:d}")
    @Html.EditorFor(model => model.Pagamento, String.Format("{0:d}", Model.Pagamento.ToString()), new { htmlAttributes = new { @class = "form-control" } })*@

                @Html.TextBoxFor(model => model.Pagamento, "{0:dd/MM/yyyy}", new { @class = "form-control  date-picker" })
                @Html.ValidationMessageFor(model => model.Pagamento, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Valor, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Valor, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Valor, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Previsto, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Previsto, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Previsto, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Retornar a lista", "LancamentosConta", new { id = Model.idConta })
</div>



<link href="~/content/themes/base/jquery-ui.css" rel="stylesheet" />
@section Scripts {

    <script type="text/javascript" src="../../scripts/jquery-ui-1.12.1.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/bootstrap-datepicker-globalize.js"></script>
    <script src="~/Scripts/locales/bootstrap-datepicker.pt-BR.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datepicker.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datepicker3.css" rel="stylesheet" />

    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">

    $(document).ready(function () {

        $('.date-picker').datepicker({
            dateFormat: 'dd/mm/yy',
            mandatory: true,
            changeYear: false,
            changeMonth: false,
            highlightWeek: true

        });

    });


    </script>
}


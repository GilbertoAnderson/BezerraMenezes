@model IEnumerable<BezerraMenezesExpress.Models.tblConta>

@{
    ViewBag.Title = "Lista de Contas";
}

<h2>Contas</h2>

<p>
</p>
<table class="table">
    <tr>
        <th>
           Id
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idConta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>            
            @Html.ActionLink("ver os lançamentos", "LancamentosConta", new { id=item.idConta, Controller = "Lancamentos"}) 
        </td>
    </tr>
}

</table>

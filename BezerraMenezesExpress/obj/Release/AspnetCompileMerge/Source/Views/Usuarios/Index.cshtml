@model IEnumerable<BezerraMenezesExpress.Models.tblUsuario>


@{
    ViewBag.Title = "Index";
}

<h2>Usuarios</h2>

<p>
    <a href="@Url.Action("Create")"> <input type="button" value="Novo" class="btn btn-default" /></a>
</p>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CodUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Celular)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tblPerfil.Descricao)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Celular)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tblPerfil.Descricao)
            </td>
            <td>
                <a href="  @Url.Action("Details", new { id = item.idUsuario }) " title='Consultar'> <i class='glyphicon glyphicon-search'> </i></a>&nbsp;
                <a href="  @Url.Action("Edit", new { id = item.idUsuario })    " title='Editar'> <i class='glyphicon glyphicon-pencil'> </i></a>&nbsp;
                <a href="  @Url.Action("Delete", new { id = item.idUsuario })  " title='Excluir'> <i class='glyphicon glyphicon-trash'>  </i></a>
                
            </td>
        </tr>
    }
    
    </table>
</body>
</html>

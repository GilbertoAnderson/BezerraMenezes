@model IEnumerable<BezerraMenezesExpress.Models.UltimaParcela>


@{
    ViewBag.Title = "UltimaParcela";
}

<h2>Ultima Parcela  @ViewBag.DtAtual.ToString("dd-MM-yyyy")
</h2>

<p>
</p>

@{
    var grid = new WebGrid(
        source: Model,
        rowsPerPage: 50,
        canPage: true,
        canSort: false,
        defaultSort: "Nome"
        );
}
<div id="grid">
    @grid.GetHtml(
    tableStyle: "gridTable",
    headerStyle: "gridHead",
    footerStyle: "gridFooter",
    rowStyle: "gridRow",
    alternatingRowStyle: "gridAltRow",
    columns: grid.Columns(
        grid.Column("Matricula", "Matricula"),
        grid.Column("Nome", "Nome"),
        grid.Column("Categoria", "Categoria"),
        grid.Column("Ano", "Ano"),
        grid.Column("Mes", "Mes")
       
        )

    )
</div>



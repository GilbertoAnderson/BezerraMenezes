@model IEnumerable<BezerraMenezesExpress.Models.tblPerfil>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Perfil</title>
</head>
<body>
    <p>
        <a href="@Url.Action("Create")"> <input type="button" value="Novo" class="btn btn-default" /></a>
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                <a href="  @Url.Action("Details", new { id = item.idPerfil }) " title='Consultar'> <i class='glyphicon glyphicon-search'> </i></a>&nbsp;
                <a href="  @Url.Action("Edit", new { id = item.idPerfil })    " title='Editar'> <i class='glyphicon glyphicon-pencil'> </i></a>&nbsp;
                <a href="  @Url.Action("Delete", new { id = item.idPerfil })  " title='Excluir'> <i class='glyphicon glyphicon-trash'>  </i></a>
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
